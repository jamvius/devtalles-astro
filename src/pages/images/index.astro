---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout>
    <h1>
        Im√°genes
    </h1>
    <img src="/assets/images/post-05.png" width="250" height="250" />
    <h1>Quality 250px</h1>
    <Image src={post05Img} width="250" height="250" alt="Image post"></Image>
    <h1>Quality 250px Low</h1>
    <Image src={post05Img} quality="low" width="250" height="250" alt="Image post"></Image>
    <h1>Quality 250px High</h1>
    <Image src={post05Img} quality="high" width="250" height="250" alt="Image post"></Image>
    <h1>Quality 500px</h1>
    <Image src={post05Img} width="500" height="500" alt="Image post"></Image>
    <h1>Quality Picture</h1>
    <Picture 
        formats={['webp', 'jpeg', 'png']} 
        widths={[240, 540, 720, post05Img.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
        src={post05Img} quality="high" width="250" height="250" alt="Image post"></Picture>

    <div style="height: 3000px;"></div>

    <img loading="lazy" src="/assets/images/post-01.png" width="250" height="250" />
</MainLayout>

<style>
    h1 {
        @apply text-5xl text-white;
    }
</style>